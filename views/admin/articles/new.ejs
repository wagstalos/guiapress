<%- include('../../partials/header'); %>
    <%- include('../../partials/navbar'); %>

        <div class="container">

            <div class="card mt-4">
                <div class="card-header">
                    <h2>Novo artigo</h2>
                </div>

                <div class="card-body">
                    <form method="POST" action="/articles/save">
                        <input class="form-control mb-4" type="text" name="title"
                            placeholder="Define o tÃ­tulo da artigo" id="js-bodyRegister">
                        <textarea id="article" class="form-control" cols="50" rows="20" name="body"></textarea>

                        <label for="" class="mt-4">Artigo</label>
                        <br>
                        <select class="form-control" name="category">
                            <% categories.forEach(function(category) { %>
                                <option value="<%= category.id  %>">
                                    <%= category.title %>
                                </option>
                                <% }); %>
                        </select>
                        <br>
                        <button class="btn btn-primary mt-4" id="js-btnRegister" disabled>Cadastrar</button>
                    </form>
                </div>

            </div>
        </div>


        <%- include('../../partials/footer') %>
            <script src="/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    selector: '#article',
                    plugins: [
                        'emoticons',
                        'media',
                        'link',
                        'image',
                        'code',
                        'table',
                        'paste',
                        'autoresize',
                        'print',
                        'preview',
                        'fullscreen',
                        'searchreplace',
                        'advlist',
                        'autolink',
                        'lists',
                        'save',
                        'insertdatetime',
                        'media'
                    ]
                });
            </script>